<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0.5dp"
    android:clickable="true"
    app:cardCornerRadius="1dp"
    app:contentPadding="@dimen/padding_small">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/newsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:minHeight="40dp"
            android:padding="@dimen/padding_small"
            android:text="Title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/textSizeExtraSmall" />


        <RelativeLayout
            android:id="@+id/newsLayout"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_below="@+id/newsTitle">

            <ImageView
                android:id="@+id/newsImage"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/imageProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/news_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newsLayout"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="start"
                android:text="News Timestamp"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textSizeExtraSmall" />

            <TextView
                android:id="@+id/newsAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="News Author"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textSizeExtraSmall" />
        </LinearLayout>

        <TextView
            android:id="@+id/NewsDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_layout"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:gravity="center"
            android:padding="@dimen/padding_small"
            android:text="News Description"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textSizeExtraSmall" />

        <TextView
            android:id="@+id/newSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NewsDescription"
            android:gravity="start"
            android:text="News Source"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textSizeExtraSmall" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
