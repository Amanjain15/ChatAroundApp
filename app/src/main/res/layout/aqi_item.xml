<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="Hello World">


    </TextView>

    <com.github.pavlospt.CircleView
        android:id="@+id/circleView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="end"
        android:layout_margin="12dp"
        android:elevation="10dp"
        app:cv_backgroundColorValue="@color/black"
        app:cv_fillColor="@color/colorAccent"
        app:cv_fillRadius="1"
        app:cv_strokeColorValue="@color/colorAccent"
        app:cv_strokeWidthSize="0"
        app:cv_subtitleSize="0dp"
        app:cv_titleColor="@color/black"
        app:cv_titleSize="18dp"
        app:cv_titleText="title" />

    <SeekBar
        android:layout_below="@id/circleView"
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</RelativeLayout>

