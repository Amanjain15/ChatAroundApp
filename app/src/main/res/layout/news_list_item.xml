<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:clickable="true"
    app:cardCornerRadius="2dp"
    app:contentPadding="@dimen/padding_medium">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/imageLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/newsTitle"
            android:text="title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageLayout"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/news_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newsTitle"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:weightSum="2">


            <TextView
                android:id="@+id/newsAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="News Author"
                android:textColor="#424242"
                android:textSize="@dimen/textSizeExtraSmall" />


            <TextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="News Timestamp"
                android:gravity="end"
                android:padding="4dp"
                android:textColor="#424242"

                />
        </LinearLayout>

        <TextView
            android:id="@+id/NewsSmallDescription"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_below="@+id/news_layout"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:gravity="center"
            android:padding="@dimen/padding_small"
            android:text="Description"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textSizeExtraSmall"
            android:visibility="gone" />

        <TextView
            android:id="@+id/newSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NewsSmallDescription"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="News Source"
            android:padding="2dp"
            android:textColor="#877409"
            android:textSize="@dimen/textSizeExtraSmall" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
