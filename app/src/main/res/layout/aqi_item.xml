<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="0.5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_margin="30dp"
            android:layout_gravity="center"
            android:text="Hello World"
            android:gravity="center"
            android:background="@color/colorAccent" >


            </TextView>

        <com.github.pavlospt.CircleView
            android:id="@+id/circleView"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="end"
            android:layout_margin="12dp"
            android:elevation="10dp"
            android:layout_alignParentRight="true"
            app:cv_backgroundColorValue="@color/black"
            app:cv_fillColor="@color/colorAccent"
            app:cv_fillRadius="1"
            app:cv_strokeColorValue="@color/colorAccent"
            app:cv_strokeWidthSize="0"
            app:cv_subtitleSize="0dp"
            app:cv_titleColor="@color/black"
            app:cv_titleSize="18dp"
            app:cv_titleText="title" />
    </RelativeLayout>

</android.support.v7.widget.CardView>