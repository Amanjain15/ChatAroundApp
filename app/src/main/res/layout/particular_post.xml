<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consecteteur"
        android:textColor="#000000"
        android:textSize="24sp"
        android:background="#DfFDF4"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        />
    <ListView
        android:id="@+id/list_comments_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/post_title"
        android:layout_above="@+id/rl_bottom"
        android:paddingBottom="4dp"
        />
    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <ImageButton
            android:id="@+id/chat_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/ic_launcher"
            android:layout_alignParentLeft="true"
            android:paddingRight="2dp"
            />
        <ImageButton
            android:id="@+id/like_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/ic_launcher"
            android:layout_toRightOf="@+id/chat_button"
            android:paddingLeft="2dp"
            />
        <EditText
            android:id="@+id/comment_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter comment here"
            android:layout_toLeftOf="@+id/add_button"
            android:layout_toRightOf="@+id/like_button"
            />
        <Button
            android:id="@+id/add_button"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:text="Send"
            />
    </RelativeLayout>
</RelativeLayout>