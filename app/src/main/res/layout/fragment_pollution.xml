<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fame.plumbum.chataround.pollution.view.PollutionFragment">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="4dp"
        app:contentPadding="4dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.github.pavlospt.CircleView
                    android:id="@+id/circleView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="end"
                    android:layout_margin="12dp"
                    android:elevation="10dp"
                    app:cv_backgroundColorValue="@color/black"
                    app:cv_fillColor="@color/colorAccent"
                    app:cv_fillRadius="1"
                    app:cv_strokeColorValue="@color/colorPrimary"
                    app:cv_strokeWidthSize="1"
                    app:cv_subtitleSize="0dp"
                    app:cv_titleColor="@color/black"
                    app:cv_titleSize="18dp"
                    app:cv_titleText="title" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.ldoublem.ringPregressLibrary.RingProgress
                    android:id="@+id/ring_progress"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:ringWidthScale="0.70"
                    app:showRingCorner="true" />

                <com.github.mikephil.charting.charts.HorizontalBarChart
                    android:id="@+id/horizontalBarChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />


            </LinearLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
</RelativeLayout>
