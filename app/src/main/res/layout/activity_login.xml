<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_main"
    >
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APP NAME"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email ID"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:layout_alignBaseline="@+id/email_edit"
                android:layout_alignLeft="@+id/pass_text"
                />
            <EditText
                android:id="@+id/email_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="abc@xyz"
                android:textColor="#000000"
                android:inputType="textEmailAddress"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@+id/email_text"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="50dp"
                />
            <TextView
                android:id="@+id/pass_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Password"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/email_text"
                android:layout_alignBaseline="@+id/pass_edit"
                />
            <EditText
                android:id="@+id/pass_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="secret!"
                android:textColor="#000000"
                android:inputType="textPassword"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@+id/email_text"
                android:layout_below="@+id/email_edit"
                android:layout_alignLeft="@+id/email_edit"
                android:layout_alignRight="@+id/email_edit"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR LOGIN WITH FACEBOOK"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/fb_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>
    </LinearLayout>
    <Button
        android:id="@+id/sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary" />
</RelativeLayout>